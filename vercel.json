{
    "version": 2,
    "cleanUrls": true,
    "builds": [
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "pharmalink/backend/src/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "pharmalink/backend/src/index.js"
        },
        {
            "src": "/demo",
            "dest": "/demo.html"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}